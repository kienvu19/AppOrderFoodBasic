<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgfood"
    tools:context=".UpdateDeleteActivity"
    android:padding="10dp">

    <ImageView
        android:id="@+id/back"
        android:layout_width="61dp"
        android:layout_height="58dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/back" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/back"
        android:fontFamily="@font/nabila"
        android:gravity="center"
        android:text="Sửa món ăn"
        android:textColor="@color/orange"
        android:textSize="27dp"
        android:textStyle="bold"></TextView>

    <LinearLayout
        android:id="@+id/layoutchinh"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textmonan"
                android:layout_width="wrap_content"
                android:fontFamily="@font/utm_pacific"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Món ăn: "
                android:textSize="40dp" />
            <TextView
                android:id="@+id/title_input2"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/textmonan"
                android:fontFamily="@font/lobest"
                android:hint="Tên"
                android:textSize="40dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout2"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textsoluong"
                android:layout_width="wrap_content"
                android:fontFamily="@font/utm_pacific"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="Số lượng: "
                android:textSize="40dp"></TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/imgtru"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@id/textsoluong"
                    android:src="@drawable/tru" />

                <TextView
                    android:id="@+id/SL_input2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lobest"
                    android:textColor="@color/black"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@id/imgtru"
                    android:text="SL"
                    android:textSize="40dp" />

                <ImageView
                    android:id="@+id/imgcong"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@id/SL_input2"
                    android:src="@drawable/cong"></ImageView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_below="@id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textgia"
                android:layout_width="wrap_content"
                android:fontFamily="@font/utm_pacific"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="Giá: "
                android:textSize="40dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/price_input2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lobest"
                    android:textColor="@color/black"
                    android:layout_toRightOf="@id/textgia"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:hint="Giá"
                    android:textSize="40dp" />
<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="VND"-->
<!--                    android:textSize="30dp"-->
<!--                    android:textColor="@color/black"-->
<!--                    android:textStyle="bold"-->
<!--                    android:layout_marginLeft="10dp"-->
<!--                    android:fontFamily="@font/utm_pacific">-->
<!--                </TextView>-->
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/duongvien_xanh"
            android:text="Xóa"
            android:fontFamily="@font/nabila"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:textSize="25sp" />

        <Button
            android:id="@+id/buttonupdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nabila"
            android:layout_marginTop="30dp"
            android:background="@drawable/duongvien_xanh"
            android:text="Cập nhật"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:textSize="25sp" />
    </LinearLayout>

</LinearLayout>