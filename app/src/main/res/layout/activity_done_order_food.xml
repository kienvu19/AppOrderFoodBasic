<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoneOrderFood">

    <LinearLayout
        android:id="@+id/gifpayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/payment">
        </pl.droidsonroids.gif.GifImageView>
    </LinearLayout>

    <TextView
        android:id="@+id/text1"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gifpayment"
        android:layout_centerInParent="true"
        android:fontFamily="@font/nabila"
        android:text="Đang giao hàng ..."
        android:textColor="@color/colorPrimary"
        android:textSize="30dp"
        android:textStyle="bold"></TextView>
    <LinearLayout
        android:id="@+id/map"
        android:layout_marginTop="20dp"
        android:layout_below="@id/text1"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true">
        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/map">
        </pl.droidsonroids.gif.GifImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_below="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btnHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/duongvien_xanh"
            android:text="Trở về màn hình chính"
            android:fontFamily="@font/nabila"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <Button
            android:id="@+id/btnviewHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/nabila"
            android:background="@drawable/duongvien_xanh"
            android:text="Lịch sử giao hàng"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </LinearLayout>
</RelativeLayout>