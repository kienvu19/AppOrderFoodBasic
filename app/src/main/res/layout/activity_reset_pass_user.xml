<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/food2"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ResetPassUserActivity">

    <ImageView
        android:id="@+id/back456"
        android:layout_width="61dp"
        android:layout_height="58dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/back" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nabila"
        android:gravity="center"
        android:text="Lấy lại mật khẩu"
        android:textColor="@color/orange"
        android:textSize="27dp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tài khoản: "
            android:textColor="@color/orange"
            android:textSize="30dp"
            android:fontFamily="@font/nabila">
        </TextView>
        <TextView
            android:id="@+id/username_reset_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tài khoản"
            android:gravity="center"
            android:textColor="@color/black"
            android:fontFamily="@font/utm_pacific"
            android:textSize="30dp"
            android:textStyle="bold">
        </TextView>
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:hint="Mật khẩu"
        android:textColorHint="#FAF8F8"
        android:id="@+id/txtPass"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp"
        android:inputType="textPassword"
        app:startIconDrawable="@drawable/ic_pass"
        app:hintEnabled="true"
        app:counterEnabled="true"
        app:boxBackgroundColor="@color/purple_500"
        app:endIconMode="password_toggle"
        android:drawablePadding="10dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password_reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Xác nhận mật khẩu"
        android:textColorHint="@color/colorPrimary"
        android:id="@+id/txtRePass"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp"
        android:inputType="text"
        app:hintEnabled="true"
        app:counterEnabled="true"
        app:startIconDrawable="@drawable/ic_pass"
        app:endIconMode="password_toggle"
        android:drawablePadding="10dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/repassword_reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnconfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:background="@drawable/duongvien_xanh"
        android:text="Đặt lại mật khẩu"
        android:fontFamily="@font/nabila"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp" />
</LinearLayout>